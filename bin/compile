#!/usr/bin/env bash

# Usage:
#
#     $ bin/compile <build-dir> <cache-dir> <env-path>

# Fail fast and fail hard.
set -eo pipefail

# Prepend proper path for virtualenv hackery. This will be deprecated soon.
export PATH=:/usr/local/bin:$PATH

# Paths.
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3


CACHED_DIRS=".heroku"

# Static configurations for virtualenv caches.
VIRTUALENV_LOC=".heroku/venv"
LEGACY_TRIGGER="lib/python2.7"
PROFILE_PATH="$BUILD_DIR/.profile.d/python.sh"
WEBCONCURRENCY_PROFILE_PATH="$BUILD_DIR/.profile.d/python.webconcurrency.sh"

DEFAULT_PYTHON_VERSION="python-2.7.9"
DEFAULT_PYTHON_STACK="cedar"
PYTHON_EXE="/app/.heroku/python/bin/python"
PIP_VERSION="6.0.6"
SETUPTOOLS_VERSION="11.3.1"

# Setup bpwatch
export PATH=$PATH:$ROOT_DIR/vendor/bpwatch
LOGPLEX_KEY="t.b90d9d29-5388-4908-9737-b4576af1d4ce"
export BPWATCH_STORE_PATH=$CACHE_DIR/bpwatch.json
BUILDPACK_VERSION=v28

# Setup pip-pop (pip-diff)
export PATH=$PATH:$ROOT_DIR/vendor/pip-pop

# Support Anvil Build_IDs
[ ! "$SLUG_ID" ] && SLUG_ID="defaultslug"
[ ! "$REQUEST_ID" ] && REQUEST_ID=$SLUG_ID
[ ! "$STACK" ] && STACK=$DEFAULT_PYTHON_STACK

# Sanitizing environment variables.
unset GIT_DIR PYTHONHOME PYTHONPATH

bpwatch init $LOGPLEX_KEY
bpwatch build python $BUILDPACK_VERSION $REQUEST_ID
TMP_APP_DIR=$CACHE_DIR/tmp_app_dir

bpwatch start compile


# We'll need to send these statics to other scripts we `source`.
export BUILD_DIR CACHE_DIR BIN_DIR PROFILE_PATH

# Syntax sugar.
source $BIN_DIR/utils

# Directory Hacks for path consistency.
APP_DIR='/app'
TMP_APP_DIR=$CACHE_DIR/tmp_app_dir

# Copy Anvil app dir to temporary storage...
bpwatch start anvil_appdir_stage
  if [ "$SLUG_ID" ]; then
    mkdir -p $TMP_APP_DIR
    deep-mv $APP_DIR $TMP_APP_DIR
  else
    deep-rm $APP_DIR
  fi
bpwatch stop anvil_appdir_stage

# Copy Application code in.
bpwatch start appdir_stage
  deep-mv $BUILD_DIR $APP_DIR
bpwatch stop appdir_stage

# Set new context.
ORIG_BUILD_DIR=$BUILD_DIR
BUILD_DIR=$APP_DIR

# Switch to the repo's context (/app)
cd $BUILD_DIR

# Prepend proper paths for buildpack use. We *must* preserve existing paths
# in case earlier buildpacks have extended them.
export PATH=$HOME/.apt/usr/bin:$BUILD_DIR/.heroku/python/bin:$BUILD_DIR/.heroku/vendor/bin:$PATH
export PYTHONUNBUFFERED=1
export LANG=en_US.UTF-8

export C_INCLUDE_PATH=/app/.heroku/python/include:${C_INCLUDE_PATH}
export CPLUS_INCLUDE_PATH=/app/.heroku/python/include:${CPLUS_INCLUDE_PATH}
export LIBRARY_PATH=/app/.heroku/python/lib:${LIBRARY_PATH}
export LD_LIBRARY_PATH=/app/.heroku/python/lib:${LD_LIBRARY_PATH}
export PKG_CONFIG_PATH=/app/.heroku/python/lib/pkg-config:${PKG_CONFIG_PATH}

ARCHITECTURE=$(dpkg-architecture -qDEB_HOST_MULTIARCH)
for EXTRA_ROOT in ${BUILD_DIR}/.heroku/vendor ${BUILD_DIR}/.apt/usr ${BUILD_DIR}/openssl ; do
    if [ -d ${EXTRA_ROOT}/bin ] ; then
        echo "Extending PATH to include ${EXTRA_ROOT}/bin" | indent
        export PATH=${EXTRA_ROOT}/bin:$PATH
    fi
    if [ -d ${EXTRA_ROOT}/include ] ; then
        if [ -d ${EXTRA_ROOT}/include/${ARCHITECTURE} ] ; then
            echo "Extending build environment to include Apt header files in ${EXTRA_ROOT}/include/${ARCHITECTURE}" | indent
            export C_INCLUDE_PATH=${EXTRA_ROOT}/include/${ARCHITECTURE}:${C_INCLUDE_PATH}
            export CPLUS_INCLUDE_PATH=${EXTRA_ROOT}/include/${ARCHITECTURE}:${CPLUS_INCLUDE_PATH}
        fi
        echo "Extending build environment to include Apt header files in ${EXTRA_ROOT}/include" | indent
        export C_INCLUDE_PATH=${EXTRA_ROOT}/include:${C_INCLUDE_PATH}
        export CPLUS_INCLUDE_PATH=${EXTRA_ROOT}/include:${CPLUS_INCLUDE_PATH}
        export SWIG_INCLUDE=${C_INCLUDE_PATH}
    fi

    if [ -d ${EXTRA_ROOT}/lib ] ; then
        if [ -d ${EXTRA_ROOT}/lib/${ARCHITECTURE} ] ; then
            echo "Extending build environment to include Apt library files in ${EXTRA_ROOT}/lib/${ARCHITECTURE}" | indent
            export LIBRARY_PATH=${EXTRA_ROOT}/lib/${ARCHITECTURE}:${LIBRARY_PATH}
            export LD_LIBRARY_PATH=${EXTRA_ROOT}/lib/${ARCHITECTURE}:${LD_LIBRARY_PATH}
            export PKG_CONFIG_PATH=${EXTRA_ROOT}/lib/${ARCHITECTURE}:${PKG_CONFIG_PATH}
        fi
        echo "Extending build environment to include Apt library files in ${EXTRA_ROOT}/lib" | indent
        export LIBRARY_PATH=${EXTRA_ROOT}/lib:${LIBRARY_PATH}
        export LD_LIBRARY_PATH=${EXTRA_ROOT}/lib:${LD_LIBRARY_PATH}
        if [ -d ${EXTRA_ROOT}/lib/pkg-config ] ; then
            echo "Extending build environment to include pkg-config files in ${EXTRA_ROOT}/lib/pkg-config" | indent
            export PKG_CONFIG_PATH=${EXTRA_ROOT}/lib/pkg-config:${PKG_CONFIG_PATH}
        fi
    fi
done

for EXTRA in $(echo "$C_INCLUDE_PATH" | sed -e 's/:/ /g') ; do
  if [ -z "${CFLAGS}" ] ; then
    export CFLAGS="-I${EXTRA}"
  else
    export CFLAGS="-I${EXTRA} ${CFLAGS}"
  fi
done
echo "Set CFLAGS=\"${CFLAGS}\"" | indent

for EXTRA in $(echo "$LD_LIBRARY_PATH" | sed -e 's/:/ /g') ; do
  if [ -z "${LDFLAGS}" ] ; then
    export LDFLAGS="-L${EXTRA}"
  else
    export LDFLAGS="-L${EXTRA} ${LDFLAGS}"
  fi
done
echo "Set LDFLAGS=\"${LDFLAGS}\"" | indent

# We require this to have access to installed binaries using the custom apt
# buildpack
export XMLSEC_CONFIG='--prefix=/app/.apt/usr'
export XMLSEC_LIBS='-L/app/.apt/usr/lib'
export XMLSEC_CRYPTO_ENGINE='openssl'

# Experimental pre_compile hook.
bpwatch start pre_compile
  source $BIN_DIR/steps/hooks/pre_compile
bpwatch stop pre_compile

# If no requirements given, assume `setup.py develop`.
if [ ! -f requirements.txt ]; then
  echo "-e ." > requirements.txt
fi

# Sticky runtimes.
if [ -f $CACHE_DIR/.heroku/python-version ]; then
export LIBRARY_PATH=/app/.heroku/vendor/lib:$BUILD_DIR/.heroku/vendor/lib:/app/.heroku/python/lib
export LD_LIBRARY_PATH=$HOME/.apt/usr/lib:/app/.heroku/vendor/lib:$BUILD_DIR/.heroku/vendor/lib:/app/.heroku/python/lib
  DEFAULT_PYTHON_VERSION=$(cat $CACHE_DIR/.heroku/python-version)
fi

# Stack fallback for non-declared caches.
if [ -f $CACHE_DIR/.heroku/python-stack ]; then
  CACHED_PYTHON_STACK=$(cat $CACHE_DIR/.heroku/python-stack)
else
  CACHED_PYTHON_STACK=$DEFAULT_PYTHON_STACK
fi

# If no runtime given, assume default version.
if [ ! -f runtime.txt ]; then
  echo $DEFAULT_PYTHON_VERSION > runtime.txt
fi

# ### The Cache
mkdir -p $CACHE_DIR

# Purge "old-style" virtualenvs.
bpwatch start clear_old_venvs
  [ -d $CACHE_DIR/$LEGACY_TRIGGER ] && rm -fr $CACHE_DIR/.heroku/bin $CACHE_DIR/.heroku/lib $CACHE_DIR/.heroku/include
  [ -d $CACHE_DIR/$VIRTUALENV_LOC ] && rm -fr $CACHE_DIR/.heroku/venv $CACHE_DIR/.heroku/src
bpwatch stop clear_old_venvs

# Restore old artifacts from the cache.
bpwatch start restore_cache
  for dir in $CACHED_DIRS; do
    cp -R $CACHE_DIR/$dir . &> /dev/null || true
  done
bpwatch stop restore_cache

# Install Third Party external binaries
source $BIN_DIR/steps/third-party-binaries

set +e
# Create set-aside `.heroku` folder.
mkdir .heroku &> /dev/null
set -e

mkdir -p $(dirname $PROFILE_PATH)

# Install Python.
source $BIN_DIR/steps/python

# Ben added this, taken from https://github.com/huxley/heroku-buildpack-SWIG-python/blob/master/bin/compile
# Install swig
echo "setting SWIG environment variables" | indent
export SWIG_FEATURES="-includeall -I/usr/include/x86_64-linux-gnu -I/app/.heroku/vendor/include -I$BUILD_DIR/.heroku/vendor/include -I/app/.heroku/python/include"
for EXTRA in $(echo "$SWIG_INCLUDE" | sed -e 's/:/ /g') ; do
  export SWIG_FEATURES="${SWIG_FEATURES} -I${EXTRA}"
done
echo "SWIG_FEATURES=${SWIG_FEATURES}" | indent

# Sanity check for setuptools/distribute.
source $BIN_DIR/steps/setuptools

# Uninstall removed dependencies with Pip.
source $BIN_DIR/steps/pip-uninstall

# Mercurial support.
source $BIN_DIR/steps/mercurial

# Pylibmc support.
source $BIN_DIR/steps/pylibmc

# Libffi support.
source $BIN_DIR/steps/cryptography

# Install dependencies with Pip.
sub-env $BIN_DIR/steps/pip-install

# Django collectstatic support.
sub-env $BIN_DIR/steps/collectstatic


# ### Finalize
#

# Set context environment variables.
set-env PATH '$HOME/.apt/usr/bin:$HOME/.heroku/python/bin:$PATH'
set-env PYTHONUNBUFFERED true
set-env PYTHONHOME /app/.heroku/python
set-env LIBRARY_PATH /app/.heroku/vendor/lib:/app/.heroku/python/lib
set-env LD_LIBRARY_PATH '$HOME/.apt/usr/lib:/app/.heroku/vendor/lib:/app/.heroku/python/lib:$LD_LIBRARY_PATH'

set-default-env LANG en_US.UTF-8
set-default-env PYTHONHASHSEED random
set-default-env PYTHONPATH /app/

# Install sane-default script for WEB_CONCURRENCY environment variable.
cp $ROOT_DIR/vendor/python.webconcurrency.sh $WEBCONCURRENCY_PROFILE_PATH


# Experimental post_compile hook.
bpwatch start post_compile
  source $BIN_DIR/steps/hooks/post_compile
bpwatch stop post_compile

# Store new artifacts in cache.
bpwatch start dump_cache
  for dir in $CACHED_DIRS; do
    rm -rf $CACHE_DIR/$dir
    cp -R $dir $CACHE_DIR/
  done
bpwatch stop dump_cache

# ### Fin.
bpwatch start appdir_commit
  deep-mv $BUILD_DIR $ORIG_BUILD_DIR
bpwatch stop appdir_commit

bpwatch start anvil_appdir_commit
  if [ "$SLUG_ID" ]; then
    deep-mv $TMP_APP_DIR $APP_DIR
  fi

bpwatch stop anvil_appdir_commit
bpwatch stop compile
